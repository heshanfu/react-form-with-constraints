    "react-native": "^0.50",
    "@types/react-native": "latest",

    "react-form-with-constraints": "^0.8.0",

    "jest": "latest",
    "@types/jest": "latest",
    "ts-jest": "latest",

    "react-test-renderer": "16.0.0",
    "@types/react-test-renderer": "latest",

    "enzyme": "latest",
    "@types/enzyme": "latest",
    "enzyme-adapter-react-16": "latest",
    "@types/enzyme-adapter-react-16": "latest",

    "babel-jest": "latest",
    "babel-core": "latest",
    "babel-preset-react-native": "latest",

    "del-cli": "latest",
    "cross-env": "latest"
  }
